\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\dot{u}=\left(F_{\mathrm{x}}/m\right)+r\cdot v-q\cdot w
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\dot{v}=\left(F_{y}/m\right)+p\cdot w-r\cdot u
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\dot{w}=(Fz/m)+q\cdot u-p\cdot v
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Where:
\end_layout

\begin_layout Itemize
\begin_inset Formula $u,v,w=$
\end_inset

