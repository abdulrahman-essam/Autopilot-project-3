\begin_layout Subsubsection
Rotational Kinematics (Euler Angle Rates)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\dot{\varphi}=p+q\cdot\sin\varphi\cdot\tan\theta+r\cdot\cos\varphi\cdot\tan\theta
\end{equation}

\end_inset


